{
  "name": "audio-mess-bot",
  "description": "Telegram Bot Converts Voice Messages Into Text",
  "version": "1.0.0",
  "engines": {
    "node": ">=24.11.1",
    "pnpm": ">=9"
  },
  "type": "module",
  "scripts": {
    "ts": "node --import ts-blank-space/register --env-file=.env src/scripts/run.js",
    "import": "pnpm run ts import ts",
    "chart": "pnpm run ts chart ts",
    "start": "pnpm run ts start ts",
    "dev": "pnpm run ts dev ts",
    "cluster": "pnpm run ts cluster ts",
    "js": "node --env-file=.env --experimental-loader newrelic/esm-loader.mjs -r newrelic dist/src/scripts/run.js",
    "start:js": "pnpm run js start js",
    "dev:js": "pnpm run js dev js",
    "cluster:js": "npm run js cluster js",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "eslint",
    "lint:all": "eslint .",
    "oxlint": "oxlint",
    "oxlint:all": "oxlint .",
    "typecheck": "tsc --noEmit",
    "build": "tsc && pnpm run copy-assets",
    "copy-assets": "node ./dist/copy-files.js",
    "locale:sync": "node --import ts-blank-space/register src/scripts/locale.ts",
    "test:runner": "vitest",
    "test:load": "artillery run load.yml --insecure",
    "test:unit": "pnpm run test:runner run --coverage --project=unit",
    "test:e2e": "pnpm run test:runner run --coverage --project=e2e",
    "test:unit:watch": "pnpm run test:runner watch --project=unit",
    "test:e2e:watch": "pnpm run test:runner watch --project=e2e",
    "test": "pnpm run test:runner run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@amplitude/node": "1.10.2",
    "@elevenlabs/elevenlabs-js": "2.31.0",
    "@google-cloud/speech": "4.5.5",
    "@mtcute/node": "0.27.6",
    "@ngrok/ngrok": "1.7.0",
    "@sentry/node": "10.34.0",
    "@sentry/profiling-node": "10.34.0",
    "aws-sdk": "2.1310.0",
    "axios": "1.13.2",
    "fastify": "5.7.0",
    "ffmpeg-static": "5.3.0",
    "fluent-ffmpeg": "2.1.3",
    "nanoid": "5.1.6",
    "newrelic": "13.9.2",
    "pg": "8.17.1",
    "picocolors": "1.1.1",
    "signal-exit": "4.1.0",
    "strip-ansi": "7.1.2",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@types/fluent-ffmpeg": "2.1.28",
    "@types/newrelic": "9.14.8",
    "@types/node": "25.0.9",
    "@types/pg": "8.16.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "8.53.0",
    "@vitest/coverage-istanbul": "4.0.17",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "artillery": "2.0.27",
    "artillery-plugin-expect": "2.21.0",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "nock": "14.0.10",
    "oxfmt": "0.24.0",
    "oxlint": "1.39.0",
    "ts-blank-space": "0.6.2",
    "typescript": "5.9.3",
    "query-string": "9.3.1",
    "supertest": "7.2.2",
    "vitest": "4.0.17",
    "vitest-sonar-reporter": "3.0.0"
  },
  "lint-staged": {
    "*.{md,html,yml}": [
      "pnpm run format"
    ],
    "*.{js,ts,json}": [
      "pnpm run format",
      "pnpm run lint",
      "pnpm run oxlint"
    ]
  },
  "author": "n0th1ng-else",
  "repository": {
    "url": "https://github.com/n0th1ng-else/voice-to-text-bot"
  },
  "bugs": {
    "url": "https://github.com/n0th1ng-else/voice-to-text-bot/issues"
  },
  "license": "MIT",
  "keywords": [
    "telegram",
    "bot",
    "speech-to-text",
    "recognition",
    "fastify",
    "speech",
    "voice",
    "text",
    "transcribe",
    "cognitive"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@contrast/fn-inspect",
      "@newrelic/native-metrics",
      "@playwright/browser-chromium",
      "@sentry-internal/node-cpu-profiler",
      "aws-sdk",
      "better-sqlite3",
      "esbuild",
      "ffmpeg-static",
      "protobufjs",
      "unix-dgram"
    ]
  }
}
