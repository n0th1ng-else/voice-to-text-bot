{
  "name": "audio-mess-bot",
  "description": "Telegram Bot Converts Voice Messages Into Text",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.16.1"
  },
  "type": "module",
  "scripts": {
    "import": "ts-node-esm -r ./init.cjs src/scripts/run.js import ts",
    "chart": "ts-node-esm -r ./init.cjs src/scripts/run.js chart ts",
    "start": "ts-node-esm -r ./init.cjs src/scripts/run.js start ts",
    "dev": "ts-node-esm -r ./init.cjs src/scripts/run.js dev ts",
    "cluster": "ts-node-esm -r ./init.cjs src/scripts/run.js cluster ts",
    "start:js": "node -r ./init.cjs --experimental-loader newrelic/esm-loader.mjs dist/src/scripts/run.js start js",
    "dev:js": "node -r ./init.cjs --experimental-loader newrelic/esm-loader.mjs dist/src/scripts/run.js dev js",
    "cluster:js": "node -r ./init.cjs --experimental-loader newrelic/esm-loader.mjs dist/src/scripts/run.js cluster js",
    "format": "prettier --write",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "lint:all": "eslint .",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "test:runner": "NODE_OPTIONS=\"--max_old_space_size=4096 --experimental-vm-modules\" jest",
    "test:load": "artillery run load.yml --insecure",
    "test:unit": "npm run test:runner -- --coverage --selectProjects=unit",
    "test:e2e": "npm run test:runner -- --coverage --runInBand --selectProjects=e2e",
    "test:unit:watch": "npm run test:runner -- --watch --selectProjects=unit",
    "test:e2e:watch": "npm run test:runner -- --watch --selectProjects=e2e",
    "test": "npm run test:runner -- --coverage --runInBand",
    "prepare": "husky install"
  },
  "dependencies": {
    "@amplitude/node": "1.10.2",
    "@google-cloud/pubsub": "2.16.1",
    "@google-cloud/secret-manager": "3.9.0",
    "@google-cloud/speech": "4.5.5",
    "@sentry/node": "7.57.0",
    "@sentry/profiling-node": "1.0.8",
    "aws-sdk": "2.1310.0",
    "axios": "1.4.0",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "ffmpeg-static": "5.2.0",
    "nanoid": "4.0.2",
    "newrelic": "10.6.2",
    "ngrok": "4.3.3",
    "node-telegram-bot-api": "0.61.0",
    "pg": "8.11.3",
    "picocolors": "1.0.0",
    "prism-media": "1.3.5",
    "signal-exit": "4.1.0",
    "strip-ansi": "7.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "winston": "3.10.0",
    "winston-logsene": "2.1.2",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/node": "20.5.3",
    "@types/node-telegram-bot-api": "0.61.7",
    "@types/parse": "3.0.4",
    "@types/pg": "8.10.2",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "artillery": "2.0.0-36",
    "artillery-plugin-expect": "2.3.2",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "jest": "29.6.3",
    "jest-sonar": "0.2.16",
    "lint-staged": "14.0.1",
    "nock": "13.3.3",
    "prettier": "3.0.2",
    "ts-jest": "29.1.1",
    "query-string": "8.1.0",
    "supertest": "6.3.3"
  },
  "lint-staged": {
    "*.{md,html,yml}": [
      "npm run format"
    ],
    "*.{js,ts,json}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "author": "n0th1ng-else",
  "repository": {
    "url": "https://github.com/n0th1ng-else/voice-to-text-bot"
  },
  "bugs": {
    "url": "https://github.com/n0th1ng-else/voice-to-text-bot/issues"
  },
  "license": "MIT",
  "keywords": [
    "telegram",
    "bot",
    "speech-to-text",
    "recognition",
    "express",
    "speech",
    "voice",
    "text",
    "transcribe",
    "cognitive"
  ]
}
